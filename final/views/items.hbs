<!DOCTYPE html>
<DOCTYPE html>
<html lang="en">
<head>
<title>Wish</title>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="description" content="Wish shop project">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="/stylesheets/indexstyle/bootstrap4/bootstrap.min.css">
<link href="/stylesheets/indexstyle/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="/stylesheets/indexstyle/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/indexstyle/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/indexstyle/plugins/OwlCarousel2-2.2.1/animate.css">
<link href="/stylesheets/indexstyle/plugins/colorbox/colorbox.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="/stylesheets/indexstyle/main_styles.css">
<link rel="stylesheet" type="text/css" href="/stlesheets/indexstyle/responsive.css">
<link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/skeleton.css">
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

<div class="super_container">
  
  <!-- Header -->

  <header class="header">
    <div class="header_inner d-flex flex-row align-items-center justify-content-start">
      <div class="logo"><a href="#">Shop/Blog</a></div>
      <nav class="main_nav">
        <ul>
          <li><a href="\">Home</a></li>
          <li><a href="\users\login">login</a></li>
          <li><a href="\items">Courses</a></li>
          <li><a href="\users\profile">Orders</a></li>
           <li><a href="/users/logout">Logout</a></li>
        </ul>
      </nav>
      <div>
      <div>
      </div>
      </div>  
      
        <div class="shopping">
          <!-- Cart -->
          <a href="/shoppingcart">
            <div class="cart">
              <img src="/images/cart.png" alt="">
              <div class="cart_num_container">
                <div class="cart_num_inner">
                  <div class="cart_num">1</div>
                </div>
              </div>
            </div>
          </a>
  </div>
  </div>
  </header>      

  <!-- Home -->

  </header>
  </div>
  <div id="lista-cursos">
    <h1 id="encabezado__cursos">Courses</h1>
{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

<script src="/js/indexjs/jquery-3.2.1.min.js"></script>
<script src="/stylesheets/indexstyle/bootstrap4/popper.js"></script>
<script src="/stylesheets/indexstyle/bootstrap4/bootstrap.min.js"></script>
<script src="/stylesheets/indexstyle/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
<script src="/stylesheets/indexstyle/plugins/easing/easing.js"></script>
<script src="/stylesheets/indexstyle/plugins/parallax-js-master/parallax.min.js"></script>
<script src="/stylesheets/indexstyle/plugins/colorbox/jquery.colorbox-min.js"></script>
<script src="/js/indexjs/custom.js"></script>
</body>